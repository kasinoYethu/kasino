    #we wanna re use the logic in this method
    def cards_count(self, player_cards):
        
        counts = {}
        for card in player_cards:
                
            if not card.rank in counts:
                counts[card.rank] = 0
            
            counts[card.rank] += 1
            
        return counts
                         
